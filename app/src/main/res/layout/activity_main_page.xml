<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivianle.diningtogo.MainPageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/blanchard" />

    <TextView
        android:id="@+id/ImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignTop="@id/imageView"
        android:layout_alignRight="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:text="BLANCHARD DINING"
        android:textColor="#E8E8E8"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CLick on section to order"
        android:id="@+id/welcomeText"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/GrilledButton"
        android:layout_marginBottom="68dp"
        android:src="@drawable/grill"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/grilltext"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/GrilledButton"
        android:layout_alignParentLeft="true"
        android:text="GRILLED"
        android:textColor="#E8E8E8"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_marginTop="220dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/CharBroilButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chicken"/>

    <TextView
        android:text="CHARBROIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#E8E8E8"
        android:layout_alignBottom="@+id/CharBroilButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_marginTop="360dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/Special"
        android:layout_centerHorizontal="true"
        android:src="@drawable/salmon"/>

    <TextView
        android:text="SPECIAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/specialText"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#E8E8E8"
        android:layout_alignBottom="@+id/Special"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_marginTop="480dp"
            android:layout_width="104dp"
            android:layout_height="118dp"
            app:srcCompat="@drawable/mini2"
            android:id="@+id/cart"
            android:layout_weight="0.46" />

        <ImageView
            android:layout_marginTop="490dp"
            android:layout_width="113dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/dollar"
            android:id="@+id/balance"
            android:layout_weight="0.68" />

    </LinearLayout>

    <TextView
        android:text="Sign Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>
</ScrollView>